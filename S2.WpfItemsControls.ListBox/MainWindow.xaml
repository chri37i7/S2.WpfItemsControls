<Window x:Class="S2.WpfItemsControls.ListBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S2.WpfItemsControls.ListBox"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="500">
    <Grid>
        <Grid Margin="10,10,9,10">
            <ListBox x:Name="personsListBox"
                     Margin="0,0,305,0"
                     ItemsSource="{Binding Persons}"
                     SelectedItem="{Binding Path=SelectedPerson}"
                     DisplayMemberPath="Fullname"
                     SelectionChanged="PersonsListBox_SelectionChanged" />
            <TextBlock x:Name="phoneNumber"
                       HorizontalAlignment="Left"
                       Margin="270,31,0,0"
                       Text="{Binding Path=SelectedPerson.PhoneNumber}"
                       TextWrapping="Wrap"
                       VerticalAlignment="Top"
                       Width="110px" />
            <TextBlock x:Name="email"
                       HorizontalAlignment="Left"
                       Margin="260,10,0,0"
                       Text="{Binding Path=SelectedPerson.Email}"
                       TextWrapping="Wrap"
                       VerticalAlignment="Top"
                       Width="120px" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="180,31,0,0"
                       Text="Telefonnummer:"
                       TextWrapping="Wrap"
                       VerticalAlignment="Top" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="180,10,0,0"
                       Text="Emailaddress: "
                       TextWrapping="Wrap"
                       VerticalAlignment="Top" />
            <Grid HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  Height="60"
                  Width="466"
                  RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1" />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Grid.RenderTransform>
                <Rectangle HorizontalAlignment="Left"
                           Height="60"
                           Stroke="#FFABADB3"
                           VerticalAlignment="Center"
                           Width="296"
                           Margin="10,0,0,0" />

            </Grid>
            <Rectangle HorizontalAlignment="Left"
                       Height="269"
                       Stroke="#FFABADB3"
                       VerticalAlignment="Top"
                       Width="296"
                       Margin="159,60,0,0" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="181,65,0,0"
                       Text="Tilføj person"
                       TextWrapping="Wrap"
                       VerticalAlignment="Top"
                       FontSize="18" />
            <TextBox HorizontalAlignment="Left"
                     Margin="325,140,0,0"
                     Text="TextBox"
                     TextWrapping="Wrap"
                     VerticalAlignment="Top"
                     Width="120" />
            <TextBox HorizontalAlignment="Left"
                     Margin="325,180,0,0"
                     Text="TextBox"
                     TextWrapping="Wrap"
                     VerticalAlignment="Top"
                     Width="120" />
            <TextBox HorizontalAlignment="Left"
                     Margin="325,220,0,0"
                     Text="TextBox"
                     TextWrapping="Wrap"
                     VerticalAlignment="Top"
                     Width="120" />
            <TextBox HorizontalAlignment="Left"
                     Margin="325,260,0,0"
                     Text="TextBox"
                     TextWrapping="Wrap"
                     VerticalAlignment="Top"
                     Width="120" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="240,141,0,0"
                       Text="Fornavn:"
                       TextWrapping="Wrap"
                       VerticalAlignment="Top" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="255,180,0,0"
                       Text="Efternavn:"
                       TextWrapping="Wrap"
                       VerticalAlignment="Top" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="240,220,0,0"
                       Text="Emailaddress:"
                       TextWrapping="Wrap"
                       VerticalAlignment="Top" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="230,260,0,0"
                       Text="Telefonnummer:"
                       TextWrapping="Wrap"
                       VerticalAlignment="Top" />
        </Grid>
    </Grid>
</Window>
